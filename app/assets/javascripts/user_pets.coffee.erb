$(document).ready ->
  $(document).on 'change', '.pets-fav', ->
    if $(this).on('click')
      $.ajax(
        url: "/user_pets/#{data-pet}/add_to_fav"
        type: 'post'
      )
  $(document).on 'change', '.pets-remove', ->
    if $(this).on('click')
      $.ajax(
        url: "/user_pets/#{data-pet}/remove_fav"
        type: 'delete'
      )
