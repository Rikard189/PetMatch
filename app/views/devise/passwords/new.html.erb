<div class="global-container">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div class="card login-form">
	<div class="card-body">
		<h3 class="card-title text-center">Recuperar Contraseña</h3>
		<div class="card-text">
			<form>
				<div class="form-group">
					<%= f.label :email, "Correo" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm" %>
				</div>
        <%= f.submit "Restablecer Contraseña", class: "btn btn-login btn-block" %>
				<div class="sign-up">
          <%= link_to "Iniciar Sesion", new_session_path(resource_name) %> <br>
          <%= link_to "Registrarse", new_registration_path(resource_name) %>
				</div>
		  </form>
		</div>
	 </div>
  </div>
<% end %>
</div>
