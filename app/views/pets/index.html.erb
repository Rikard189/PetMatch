<div class="container">
  <div class="row">
    <% @pets.each do |pet| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <%= image_tag pet.images.first.image_url, class: "card-img-top" %>
          <div class="card-body">
            <p class="card-text">
              Hola mi nombres es <%= pet.name %>
            </p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to "Mostrar", pet, class: "btn btn-md btn-success" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
