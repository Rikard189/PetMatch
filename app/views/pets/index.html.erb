<br>
<div class="container">
  <h1 class="text-center font-weight-bold explore-txt">¡Explora a tu mascota Ideal!</h1>
  <div class="search-bar row col-sm-12">
    <%= search_form_for @q, class: "input-group pets-filter" do |f| %>
      <%= f.search_field :name_cont, class: "form-control", placeholder: "Busqueda por nombre" %>
      <%= button_tag(type: "submit") do %>
        <%= fa_icon "search" %>
      <% end %>
    <% end %>
  </div>
  <br>
  <div class="row">
    <% @pets.each do |pet| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <%= image_tag pet.images.first.image_url, class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title">¡Hola! Mi nombre es <%= pet.name %></h5>
            <p class="card-text"><%= pet.description %></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to "Mostrar", pet, class: "btn btn-md orange-btn" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
