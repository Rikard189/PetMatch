<div class="container">
  <br>
  <h1 class="text-center font-weight-bold explore-txt">Da En Adopcion A Una Mascota</h1>
  <%= form_for @pet, url: { action: :create } do |form| %>
    <div class="form-group">
      <%= form.label :name, "Nombre de Mascota" %>
      <%= form.text_field :name, class: "form-control", placeholder: "Nombre de Mascota", required: true %>
    </div>
    <div class="form-group">
      <%= form.label :age, "Edad de Mascota" %>
      <%= form.number_field :age, class: "form-control", placeholder: "Edad de Mascota", required: true %>
    </div>
    <div class="form-group">
      <%= form.label :animal_type, "Tipo de Mascota" %>
      <%= form.select :animal_type, animal_types_collection, { include_blank: "Selecciona el Tipo de Mascota"}, { class: "form-control", required: true }  %>
    </div>
    <div class="form-group">
      <%= form.label :breed, "Raza de la Mascota" %>
      <%= form.text_field :breed, class: "form-control", placeholder: "Raza de Mascota", required: true %>
    </div>
    <div class="form-group">
      <%= form.label :description, "Descripcion" %>
      <%= form.text_area :description, class: "form-control", placeholder: "Describe a tu Mascota" %>
    </div>
    <p>Foto de Mascota</p>
    <%= form.fields_for :images do |f| %>
      <% f.label :image, "Imagen" %>
      <% f.file_field :image %>
    <% end %>
    <%= form.submit "Crear Mascota", class: "btn btn-login btn-block" %>
  <% end %>
</div>
